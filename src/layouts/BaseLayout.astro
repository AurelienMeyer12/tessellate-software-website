---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = "Tessellate Software" } = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/favicon.png" />

  <!-- Taviraj (Light 300 + Bold 700 for headings) -->
  <link href="https://fonts.googleapis.com/css2?family=Taviraj:ital,wght@0,300;0,700;1,300;1,700&display=swap" rel="stylesheet">
</head>
<body>
  <slot />
</body>
</html>

