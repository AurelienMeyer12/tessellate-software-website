---
interface Props {
  name: string;
  role: string;
  image: string;
  linkedin: string;
  bio: string;
}

const { name, role, image, linkedin, bio } = Astro.props;
---

<article class="member" role="listitem" data-name={name} data-role={role} data-link={linkedin} data-img={image} data-bio={bio}>
  <a class="member__avatar-link" href={linkedin} target="_blank" rel="noopener" aria-label={`${name}'s LinkedIn profile`}>
    <img class="member__avatar" src={image} alt={`${name} headshot`} />
  </a>
  <h3 class="member__name">{name}</h3>
  <p class="member__role">{role}</p>
  <p class="member__bio">{bio}</p>
</article>

